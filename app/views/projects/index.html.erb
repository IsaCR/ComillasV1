<p id="notice"><%= notice %></p>

<h2>Projects</h2>

<%= link_to 'New Project', new_project_path %>
<hr>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4 portfolio-item">
      <a href="#">
        <%= image_tag project.image.url(:thumb), class:'img-responsive' %>
      </a>
      <h3>
        <%= link_to project.title, project %>
      </h3>
      <p>
        <%= project.description %>
      </p>
    </div>
  <% end %>
</div>

<hr>


