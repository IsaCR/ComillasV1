<% @receipts.each do |receipt| %>
  <% message = receipt.message %>
  <div class="media">
    <div class="media-left message-avatar">
      <% if conversation.originator.avatar.present? %>
        <%=  image_tag conversation.originator.avatar.url(:thumb) %>
      <% else %>
        <img class="media-object" src="http://placehold.it/64x64" alt="...">
      <% end %>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= message.sender.name %> <br>
        <small><b>Subject: </b><%= message.subject %></small><br>
        <small><b>Date: </b><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
      </h4>
      <%= message.body.html_safe %>
    </div>
  </div>
<% end %>
