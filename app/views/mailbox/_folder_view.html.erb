<div class="row">
  <div class="spacer"></div>
  <div class="col-md-8">
    <%= link_to "Back", :back %>
    <div class="panel panel-default">
      <div class="panel-body">
        <% if is_conversation %>
          <%= render 'conversations/form' %>
        <% else %>
          <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
      </div>
    </div>
  </div>
</div>
